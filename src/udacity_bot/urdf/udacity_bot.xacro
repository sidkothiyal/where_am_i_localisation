<?xml version='1.0'?>

<robot name="udacity_bot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <link name="robot_footprint"></link>
  <xacro:include filename="$(find udacity_bot)/urdf/udacity_bot.gazebo" />

  <material name="blue">
    <color rgba="0.2824 0.6431 0.8392 1"/>
  </material>

  <material name="red">
    <color rgba="0.7843 0 0 1"/>
  </material>


  <joint name="robot_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="robot_footprint"/>
    <child link="chassis_base" />
  </joint>

  <link name='chassis_base'>
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="10.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <cylinder radius=".3" length="0.10"/>
      </geometry>
    </collision>

    <visual name='chassis_base_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <cylinder radius=".3" length="0.10"/>
      </geometry>
      <material name="red"/>
    </visual>


    <collision name='back_caster_collision'>
      <origin xyz="-0.25 0 -0.05" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.0499"/>
      </geometry>
    </collision>

    <visual name='back_caster_visual'>
      <origin xyz="-0.25 0 -0.05" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <material name="blue"/>
    </visual>

    <collision name='front_caster_collision'>
      <origin xyz="0.25 0 -0.05" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.0499"/>
      </geometry>
    </collision>

    <visual name='front_caster_visual'>
      <origin xyz="0.25 0 -0.05" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <material name="blue"/>
    </visual>

  </link>

  <!--chassis lower-->

  <link name='chassis_lower'>
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size=".2 .4 .1"/>
      </geometry>
    </collision>

    <visual name='chassis_lower_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".2 .4 .1"/>
      </geometry>
      <material name="red"/>
    </visual>
   </link>


   <joint type="fixed" name="base_joint">
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <child link="chassis_lower"/>
      <parent link="chassis_base"/>
      <axis xyz="0 1 0" rpy="0 0 0"/>
      <limit effort="10000" velocity="1000"/>
      <dynamics damping="1.0" friction="1.0"/>
    </joint>

 <!-- chassis mid -->

  <link name='chassis_mid'>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size=".2 .4 .05"/>
      </geometry>
    </collision>

    <visual name='chassis_mid_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".2 .4 .05"/>
      </geometry>
    </visual>
   </link>


   <joint type="fixed" name="base_mid_joint">
      <origin xyz="0 0 0.075" rpy="0 0 0"/>
      <child link="chassis_mid"/>
      <parent link="chassis_lower"/>
      <axis xyz="0 1 0" rpy="0 0 0"/>
      <limit effort="10000" velocity="1000"/>
      <dynamics damping="1.0" friction="1.0"/>
    </joint>

  <!--main chassis -->

  <link name='chassis'>
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size=".2 .4 .3"/>
      </geometry>
    </collision>

    <visual name='chassis_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".2 .4 .3"/>
      </geometry>
      <material name="blue"/>
    </visual>
   </link>


   <joint type="fixed" name="base_top_joint">
      <origin xyz="0 0 0.175" rpy="0 0 0"/>
      <child link="chassis"/>
      <parent link="chassis_mid"/>
      <axis xyz="0 1 0" rpy="0 0 0"/>
      <limit effort="10000" velocity="1000"/>
      <dynamics damping="1.0" friction="1.0"/>
    </joint>

 
  <!--left wheel-->

  <link name='left_wheel'>

    <inertial>
      <mass value="5.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
      <inertia
 		ixx="0.1" ixy="0" ixz="0"
    	iyy="0.1" iyz="0"
    	izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/> 
      <geometry>
        <cylinder radius=".1" length="0.05"/>
      </geometry>
    </collision>

    <visual name='left_wheel_visual'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius=".1" length="0.05"/>
      </geometry>
      <material name="blue"/>
    </visual>

  </link>

  <joint type="continuous" name="left_wheel_hinge">
      <origin xyz="0 0.31 0" rpy="0 0 0"/>
      <child link="left_wheel"/>
      <parent link="chassis_base"/>
      <axis xyz="0 1 0" rpy="0 0 0"/>
      <limit effort="10000" velocity="1000"/>
      <dynamics damping="1.0" friction="1.0"/>
    </joint>

  <!--right wheel-->

  <link name='right_wheel'>

    <inertial>
      <mass value="5.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
      <inertia
 		ixx="0.1" ixy="0" ixz="0"
    	iyy="0.1" iyz="0"
    	izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/> 
      <geometry>
        <cylinder radius=".1" length="0.05"/>
      </geometry>
    </collision>

    <visual name='right_wheel_visual'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius=".1" length="0.05"/>
      </geometry>
      <material name="blue"/>
    </visual>

  </link>

    <joint type="continuous" name="right_wheel_hinge">
        <origin xyz="0 -0.31 0" rpy="0 0 0"/>
        <child link="right_wheel"/>
        <parent link="chassis_base"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <limit effort="10000" velocity="1000"/>
        <dynamics damping="1.0" friction="1.0"/>
      </joint>

  <!--left arm -->

  <link name='left_arm'>

    <inertial>
      <mass value="1.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 -0.7 1.5707"/>
      <inertia
 		ixx="0.1" ixy="0" ixz="0"
    	iyy="0.1" iyz="0"
    	izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 -0.7 1.5707"/> 
      <geometry>
        <cylinder radius=".05" length="0.35"/>
      </geometry>
    </collision>

    <visual name='left_arm_visual'>
      <origin xyz="0 0 0" rpy=" 0 -0.7 1.5707"/>
      <geometry>
        <cylinder radius=".05" length="0.35"/>
      </geometry>
      <material name="blue"/>
    </visual>

  </link>

  <joint type="continuous" name="left_arm_hinge">
      <origin xyz="0 0.25 -0.01" rpy="0 0 0"/>
      <child link="left_arm"/>
      <parent link="chassis"/>
      <axis xyz="0 1 0" rpy="0 0 0"/>
      <limit effort="10000" velocity="1000"/>
      <dynamics damping="1.0" friction="1.0"/>
    </joint>

  <!--right arm -->

  <link name='right_arm'>

    <inertial>
      <mass value="1.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0.7 1.5707"/>
      <inertia
 		ixx="0.1" ixy="0" ixz="0"
    	iyy="0.1" iyz="0"
    	izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0.7 1.5707"/> 
      <geometry>
        <cylinder radius=".05" length="0.35"/>
      </geometry>
    </collision>

    <visual name='right_arm_visual'>
      <origin xyz="0 0 0" rpy=" 0 0.7 1.5707"/>
      <geometry>
        <cylinder radius=".05" length="0.35"/>
      </geometry>
      <material name="blue"/>
    </visual>

  </link>

    <joint type="continuous" name="right_arm_hinge">
        <origin xyz="0 -0.25 -0.01" rpy="0 0 0"/>
        <child link="right_arm"/>
        <parent link="chassis"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <limit effort="10000" velocity="1000"/>
        <dynamics damping="1.0" friction="1.0"/>
      </joint>

   <!-- cape -->

  <link name='chassis_cape'>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size=".002 .35 .5"/>
      </geometry>
    </collision>

    <visual name='chassis_cape_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".002 .35 .5"/>
      </geometry>
    </visual>
    <material name="red"/>
   </link>


   <joint type="fixed" name="chassis_cape_joint">
      <origin xyz="-0.25 0 -0.04" rpy="0 0.7 0"/>
      <child link="chassis_cape"/>
      <parent link="chassis"/>
      <axis xyz="0 1 0" rpy="0 0 0"/>
      <limit effort="10000" velocity="1000"/>
      <dynamics damping="1.0" friction="1.0"/>
    </joint>

   <!-- sensors -->

  <link name='camera'>

    <inertial>
      <mass value=".1"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
      	ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>

    <visual name='camera_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <material name="red"/>
    </visual>

  </link>

    <joint type="fixed" name="camera_joint">
        <origin xyz="0.1 0 0.05" rpy="0 0 0"/>
        <child link="camera"/>
        <parent link="chassis"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <limit effort="10000" velocity="1000"/>
        <dynamics damping="1.0" friction="1.0"/>
      </joint>

        

  <link name='hokuyo'>

    <inertial>
      <mass value=".1"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
      	ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>

    <visual name='hokuyo_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
      <mesh filename="package://udacity_bot/meshes/hokuyo.dae"/>
      </geometry>
    </visual>

  </link>

    <joint type="fixed" name="hokuyo_joint">
        <origin xyz="0. 0 0.18" rpy="0 0 0"/>
        <child link="hokuyo"/>
        <parent link="chassis"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <limit effort="10000" velocity="1000"/>
        <dynamics damping="1.0" friction="1.0"/>
      </joint>

</robot>
